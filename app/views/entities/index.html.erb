<%- title("Listing entities") -%>

<% @entity_types.each do |entity_type| %>
<h2><%= entity_type.description %></h2>
<hr>

<% entity_type.entities.each do |entity| %>
<p><%= entity.name %></p>
<p><%= entity.homepage %></p>
<p><%= entity.nif %></p>
<p><%= link_to 'Show', entity %>, <%= link_to 'Edit', edit_entity_path(entity) %>, <%= link_to 'Destroy', entity, :confirm => 'Are you sure?', :method => :delete %></p>
<% end %>

<% end %>


