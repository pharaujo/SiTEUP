<% title "Post" %>
<% content_for :actions do %>
<p>
  <%= link_to "Edit", edit_post_path(@post) %>
</p>
<p>
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %>
</p>
<p>
  <%= link_to "View All", posts_path %>
</p>
<% end %>

<p>
  <strong>Title:</strong>
  <%=h @post.title %>
</p>
<p>
  <strong>Body:</strong>
  <%=h @post.body %>
</p>
<p>
  <strong>Member:</strong>
  <%=h @post.member.nickname %>
</p>

