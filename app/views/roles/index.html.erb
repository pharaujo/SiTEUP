<% title "Roles" %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Member</th>
    <th>Role Type</th>
  </tr>
  <% for role in @roles %>
    <tr>
      <td><%=h role.name %></td>
      <td><%=h role.description %></td>
      <td><%=h role.start_date %></td>
      <td><%=h role.end_date %></td>
      <td><%=h role.member %></td>
      <td><%=h role.role_type %></td>
      <td><%= link_to "Show", role %></td>
      <td><%= link_to "Edit", edit_role_path(role) %></td>
      <td><%= link_to "Destroy", role, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Role", new_role_path %></p>
